	public static void main(String[] args){
		
		
		Font desc = new Font("Serif", Font.BOLD, 50);
		int year;
		int yearIndex = 0;
		Color c = new Color(0,0,0);
		
		
		JFrame frame = new JFrame();
		frame.setUndecorated(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		

		// Size the frame.
		frame.setExtendedState(JFrame.MAXIMIZED_BOTH);
		frame.setBounds(0,0,1280,800);
		
		NoPaneNoGain pane = new NoPaneNoGain();
		JPanel bottom = new JPanel();
		bottom.setVisible(true);

		
		
		
		
		
		JTextArea a = new JTextArea(80,30);
		a.setWrapStyleWord(true);
		a.setLineWrap(true);
		a.setEditable(false);
		a.setFont(desc);

		
		
		bottom.add(a);
		bottom.setBounds(0,500,1280,700);
		
		pane.setBounds(0,0,1280,400);
		
		frame.getContentPane().add(bottom);
		frame.getContentPane().add(pane);
		

		
		
		
		
		frame.setVisible(true);
		

		
		while(yearIndex < 428){

			
			year = years[yearIndex];
			yearIndex ++;
			Random gen = new Random();
			c = new Color(gen.nextInt(150) + 100,gen.nextInt(150) + 100 ,gen.nextInt(150) + 100);
			pane.incrementYear(years[yearIndex], c);
			bottom.setBackground(c);
			
			a.setBackground(c);
			a.setText(words[yearIndex]);
			
			
			//wait
			try{Thread.sleep((long)(float)17 * 60 * 1000 /years.length);}
			catch(Exception e){}
			
			//System.out.println((long)(float)(17 * 60 * 1000) /years.length);
		
		}
		
	}
}
